<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>User name</th>
      <th>Country</th>
      <th>Province</th>
      <th>District</th>
      <th>Sector</th>
      <th>Cell</th>
      <th>Village</th>
      <th>Contact</th>
      <th>Gender</th>
      <th>Id number</th>
      <th>Date</th>
      <th>Post reason</th>
      <th>Confirmation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.user_name %></td>
        <td><%= post.country %></td>
        <td><%= post.province %></td>
        <td><%= post.district %></td>
        <td><%= post.sector %></td>
        <td><%= post.cell %></td>
        <td><%= post.village %></td>
        <td><%= post.contact %></td>
        <td><%= post.gender %></td>
        <td><%= post.ID_number %></td>
        <td><%= post.date %></td>
        <td><%= post.post_reason %></td>
        <td><%= post.confirmation %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
